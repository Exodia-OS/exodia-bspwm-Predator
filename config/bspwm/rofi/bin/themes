#!/usr/bin/env bash

#
# Copyright (C) Mahmoud Mohamed (Ozil)  <https://github.com/mmsaeed509>
# LICENSE © GNU-GPL3
#

DIR="$HOME/.config/bspwm"
BSP="$HOME/.config/bspwm/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Available Themes

theme_1=" Red Jungles"
theme_2=" Emilia"
theme_3=" ChadWM"
theme_4=" Hack"
theme_5=" Black And Red"
theme_6=" Rick"
theme_7=" Hack The Box"
theme_8=" BlackArch"
theme_9=" Neon"
theme_10=" JScoffee"
theme_11=" Amarena"
theme_12=" Japanese City"

# pass available themes to rofi 
availableThemes="$theme_1\n$theme_2\n$theme_3\n$theme_4\
\n$theme_5\n$theme_6\n$theme_7\n$theme_8\
\n$theme_9\n$theme_10\n$theme_11\n$theme_12"

chosen="$(echo -e "$availableThemes" | $rofi_command -p "Available themes : (12)" -dmenu -selected-row 0)"
#
# the 1st var -> background, the 2th var -> color scheme name, the 3th var -> the theme name, 
# the 4th var -> icons name, the 5th var -> the cursor name, the 6th var -> RGB mood for keyboard ( only for Acer Predator Laptops )
# the 7th var ( if it exists )-> for customized polybar
#
case $chosen in
    $theme_1)
        bash ${BSP}/set-theme  'BloodJungles.jpg' 'Jungles' 'Blade2' 'Red-Icons' 'LyraS' 'RedJungles' 'Jungles'
        ;;
    $theme_2)
        bash ${BSP}/set-theme  'amilia.jpg' 'Emilia' 'Dracula' 'Elena-dark-icons' 'Sweet' 'Emilia' 'Emilia'
        ;;
    $theme_3)
        bash ${BSP}/set-theme  'chad.png' 'ChadWM' 'Qogir-dark' 'Qogir-dark' 'Hack-C' 'ChadWM' 'ChadWM'
        ;;
    $theme_4)
        bash ${BSP}/set-theme  'hack.jpg' 'hack' 'Hack' 'Hack' 'LyraB' 'Hack' 'hack'
        ;;
    $theme_5)
        bash ${BSP}/set-theme  'Arch-red.png' 'black-red' 'SIth Empire' 'Red-Black' 'Black-and-red' 'BlackRed' 'black-red'
        ;;
    $theme_6)
        bash ${BSP}/set-theme  'rick.jpg' 'rick' 'Rick' 'Zafiro' 'Vimix-dark' 'Rick' 'rick'
        ;;
    $theme_7)
        bash ${BSP}/set-theme  'hackthebox.jpg' 'HackTheBox' 'Tokyonight-Dark-BL' 'Green-Icons' 'Hack-C' 'HackTheBox' 'HackTheBox'
        ;;
    $theme_8)
        bash ${BSP}/set-theme  'hacktheplanet.png' 'BlackArch' 'BlackArch-theme' 'Blue-Icons' 'BlackArch-cursor' 'BlackArch' 'BlackArch'
        ;;
    $theme_9)
        bash ${BSP}/set-theme  'women.jpg' 'neon' 'Tokyonight-Dark-BL' 'neon-icon' 'WineTrix' 'Neon' 'neon'
        ;;
    $theme_10)
        bash ${BSP}/set-theme  'JScoffee.jpg' 'JScoffee' 'everblush' 'oomox-Everblush-icons' 'Hack-C' 'ChadWM' 'JScoffee'
        ;;
    $theme_11)
        bash ${BSP}/set-theme  'amarena.jpg' 'Amarena' 'amarena' 'Elena-dark-icons' 'neon-cursor2' 'Amarena' 'Amarena'
        ;;
    $theme_12)
        bash ${BSP}/set-theme  'tokyo-night31.png' 'JapaneseCity' 'Tokyonight-Dark-B' 'Elena-dark-icons' 'phinger-cursors' 'JapaneseCity' 'JapaneseCity'
        ;;
esac
