;; Global WM Settings

[global/wm]
margin-bottom = 0
margin-top = 0

include-file = ~/.config/bspwm/polybar/neon/system
include-file = ~/.config/bspwm/polybar/colors

# contains brightness, workspaces, Date, etc.... #
include-file = ~/.config/bspwm/polybar/neon/modules/modules

# contains Music, microphone, etc.... #
include-file = ~/.config/bspwm/polybar/neon/modules/mediaModules

# contains CPU, Temperature, etc.... #
include-file = ~/.config/bspwm/polybar/neon/modules/monitoringModules

# contains the separators (e.g  , | , <| ,  ,etc..) #
include-file = ~/.config/bspwm/polybar/neon/modules/separatorsModules


[bar/main]
monitor = 
monitor-strict = false
override-redirect = false

bottom = false
fixed-center = true

width = 99%
height = 27
offset-x = 0.5%
offset-y = 0.5%

# width = 100%
# height = 24
# offset-x = 0
# offset-y = 0



background = ${color.BACKGROUND}
foreground = ${color.FOREGROUND}

radius-top = 5
radius-bottom = 5

# radius-top = 0.0
# radius-bottom = 0.0

line-size = 2
line-color = ${color.BLUE}

border-size = 5
border-color = ${color.BACKGROUND}

padding = 0
module-margin-left = 0
module-margin-right = 0


font-0 = "Iosevka Nerd Font:size=10;3"
font-1 = "Iosevka Nerd Font:size=12;3"
font-2 = "google\-mdi:size=12;3"
font-3 = "Iosevka:style=bold:"size=12;3"
font-4 = "Iosevka Nerd Font:size=18;4"



modules-left = LDmod mod RDmod space LDmod xkeyboard RDmod space space bspwm space space LDmod info-cava RDmod space LDmod themes RDmod
modules-center = LDmpd space mpd space RDmpd  
modules-right = LDB updates-pacman cpu cpuTemp RDD space network sep backlight sep volume space LDB2 battery date RDD2

separator =
spacing = 0

dim-value = 1.0

wm-name = bspwm
locale = 

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-transparent = false
tray-background = ${color.BACKGROUND}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

wm-restack = bspwm

enable-ipc = true

; bspwm
scroll-up = bspc desktop -f prev.local
scroll-down = bspc desktop -f next.local

[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30

screenchange-reload = false

compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

