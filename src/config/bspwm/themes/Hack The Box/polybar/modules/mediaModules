[module/info-cava]
type = custom/script
exec =  ~/.config/bspwm/themes/Hack\\ The\\ Box/polybar/scripts/cava -c average -f 60

format = <label>
label = " %output% "
format-foreground = ${color.BACKGROUND}
format-background = ${color.FOREGROUND}
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/pulse-mic]

type = custom/script
