		facer_rgb.py -m 0 -z 1 -cR 125 -cB 254 -cG 255 -b 100
		sleep 0.3
		facer_rgb.py -m 0 -z 2 -cR 125 -cB 254 -cG 255 -b 100
		sleep 0.3
		facer_rgb.py -m 0 -z 3 -cR 125 -cB 254 -cG 255 -b 100
		sleep 0.3
		facer_rgb.py -m 0 -z 4 -cR 125 -cB 254 -cG 255 -b 100

else

	HELP_MENU

fi

