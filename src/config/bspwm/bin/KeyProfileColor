# ---------------------------- No. 1 -- > Red Jungles Theme ----------------------------

if [[ "$1" == "-RedJungles" ]]
then
	
	facer_rgb.py -m 0 -z 1 -cR 255 -cB 0 -cG 0 -b 100
	sleep 0.3
	facer_rgb.py -m 0 -z 2 -cR 255 -cB 0 -cG 0 -b 100
	sleep 0.3
	facer_rgb.py -m 0 -z 3 -cR 255 -cB 0 -cG 0 -b 100
	sleep 0.3
	facer_rgb.py -m 0 -z 4 -cR 255 -cB 0 -cG 0 -b 100
	
# ---------------------------- No. 2 -- > Emilia Theme ----------------------------

elif [[ "$1" == "-Emilia" ]]
then
	
	facer_rgb.py -m 0 -z 1 -cR 175 -cB 255 -cG 0 -b 100
